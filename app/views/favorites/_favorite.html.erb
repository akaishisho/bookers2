<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete, remote: true do %>
    <i class="fas fa-heart unlike-btn"></i>
  <% end %>
    <span class="unlike-count"><%= book.favorites.count %></span>
  <% else %>
  <%= link_to book_favorites_path(book), method: :post, remote: true do %>
    <i class="fas fa-heart like-btn"></i>
  <% end %>
  <span class="like-count"><%= book.favorites.count %></span>
<% end %>