<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @user %>
      <!--共通化できる-->
      <div class='row follow'>
        <% unless current_user == @user %>
          <% if current_user.following?(@user) %>
            <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete,class:"btn btn-info btn-sm" %>
          <% else %>
            <%= link_to "フォローする", user_relationships_path(@user.id), method: :post,class:"btn btn-success btn-sm" %>
          <% end %>
        <% end %>
      </div>
      <!--共通化できる-->
      <h2 class = "mt-3">New book</h2>
      <%= render 'books/book', book: @newbook %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@book.user) do %>
              <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, fallback: "no_image_big.jpg"%></br>
              <%= link_to @user.name, user_path(@user) %>
            <% end %>
          </td>
          <td><%= link_to @book.title,book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data:{confirm: "本当に消しますか？"}, class:"btn btn-sm btn-danger" %></td>
          <% else %>
            <td>
              <% if @book.favorited_by?(current_user) %>
                <%= link_to book_favorites_path(@book), method: :delete do %>
                  <i class="fas fa-heart unlike-btn"></i>
                <% end %>
                <span class="unlike-count"><%= @book.favorites.count %></span>
              <% else %>
                <%= link_to book_favorites_path(@book), method: :post do %>
                  <i class="fas fa-heart like-btn"></i>
                <% end %>
                <span class="like-count"><%= @book.favorites.count %></span>
              <% end %>
            </td>
            <td>コメント件数：<%= @book.book_comments.count %></td>
          <% end %>
        </tr>
      </table>
      <div>
        <table>
          <tbody>
            <% @book.book_comments.each do |book_comment| %>
              <tr>
                <td>
                  <%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, fallback: "no_image_big.jpg"%></br>
                  <%= link_to book_comment.user.name,user_path(book_comment.user) %>
                </td>
                <td><%= book_comment.comment %></td>
                <td>
                  <% if book_comment.user == current_user %>
                    <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete,class:"btn btn-sm btn-danger" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div>
        <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
          <%= f.text_area :comment, rows:'5',class:"form-control book_comment" %>
          <div class="comment">
            <%= f.submit "送信",class:"btn btn-light btn-sm" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>